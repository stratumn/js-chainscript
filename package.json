{
  "name": "js-chainscript",
  "version": "1.0.0",
  "description": "Official JavaScript implementation of https://github.com/stratumn/chainscript.",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "lint": "tslint --project \"./tsconfig.json\"",
